<h1 class="h3 mb-3"><%= t("profiles.edit.title") %></h1>

<div class="row g-4">
  <div class="col-md-8">
    <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :github_username, class: "form-label" %>
        <%= f.text_field :github_username, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :bio, class: "form-label" %>
        <%= f.text_area :bio, rows: 4, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :website, class: "form-label" %>
        <%= f.url_field :website, class: "form-control" %>
      </div>
      <% if @user.respond_to?(:location) %>
        <div class="mb-3">
          <%= f.label :location, class: "form-label" %>
          <%= f.text_field :location, class: "form-control" %>
        </div>
      <% end %>
      <% if @user.respond_to?(:skills) %>
        <div class="mb-3">
          <%= f.label :skills, class: "form-label" %>
          <%= f.text_area :skills, rows: 3, class: "form-control" %>
        </div>
      <% end %>
      <% if @user.respond_to?(:theme) %>
        <div class="mb-3">
          <%= f.label :theme, class: "form-label" %>
          <%= f.select :theme, options_for_select([["Light", "light"], ["Dark", "dark"]], @user.theme), {}, class: "form-select" %>
        </div>
      <% end %>

      <% if @user.respond_to?(:accent_color) %>
        <div class="mb-3">
          <%= f.label :accent_color, class: "form-label" %>
          <%= f.color_field :accent_color, class: "form-control form-control-color", value: @user.accent_color || "#0d6efd" %>
          <div class="form-text">Choose your accent color (buttons, links).</div>
        </div>
      <% end %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :avatar_url, class: "form-label" %>
          <%= f.url_field :avatar_url, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :banner_url, class: "form-label" %>
          <%= f.url_field :banner_url, class: "form-control" %>
        </div>
      </div>
      <div class="row g-3 mt-1">
        <div class="col-md-6">
          <%= f.label :github_url, class: "form-label" %>
          <%= f.url_field :github_url, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :twitter_url, class: "form-label" %>
          <%= f.url_field :twitter_url, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :linkedin_url, class: "form-label" %>
          <%= f.url_field :linkedin_url, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :youtube_url, class: "form-label" %>
          <%= f.url_field :youtube_url, class: "form-control" %>
        </div>
      </div>

      <hr class="my-4">
      <h2 class="h6">Resume & Details</h2>
      <% if Rails.env.development? && defined?(Sidekiq) %>
        <% begin
             running = Sidekiq::ProcessSet.new.size > 0
           rescue
             running = false
           end %>
        <% unless running %>
          <div class="alert alert-warning py-2">
            Background jobs are not running. Start Sidekiq with
            <code>bundle exec sidekiq</code>.
            <%= link_to 'Open dashboard', '/sidekiq', class: 'alert-link ms-1' %>
          </div>
        <% end %>
      <% end %>
      <div class="mb-3">
        <%= f.label :resume, class: "form-label" %>
        <%= f.file_field :resume, class: "form-control" %>
        <div class="form-text">Allowed: PDF, DOC, DOCX. Max 10 MB.</div>
        <% if @user.resume.attached? %>
          <div class="form-text mt-1">
            Current: <%= @user.resume.filename.to_s %> (<%= number_to_human_size(@user.resume.byte_size) %>)
          </div>
          <% if @user.respond_to?(:resume_scan_status) %>
            <div class="form-text">Scan status: <strong><%= @user.resume_scan_status %></strong></div>
            <% if @user.respond_to?(:resume_virus_found) && @user.resume_virus_found %>
              <div class="text-danger small">Warning: last upload flagged as infected. The file was removed.</div>
            <% end %>
          <% end %>
          <div class="form-check mt-1">
            <%= check_box_tag :remove_resume, '1', false, class: 'form-check-input', id: 'remove_resume' %>
            <%= label_tag :remove_resume, 'Remove current resume', class: 'form-check-label' %>
          </div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :education, class: "form-label" %>
        <%= f.text_area :education, rows: 3, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :experience, class: "form-label" %>
        <%= f.text_area :experience, rows: 3, class: "form-control" %>
      </div>

      <% if @user.respond_to?(:custom_css) %>
        <div class="mb-3">
          <%= f.label :custom_css, class: "form-label" %>
          <%= f.text_area :custom_css, rows: 5, class: "form-control", placeholder: ".btn-primary { border-radius: 9999px; }" %>
          <div class="form-text">Optional advanced styling. Use with care.</div>
        </div>
      <% end %>

      <hr class="my-4">
      <h2 class="h6">Change Password</h2>
      <p class="text-muted small">To change your password, enter your current password and the new password.</p>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :current_password, class: "form-label" %>
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
        </div>
        <div class="col-md-6"></div>
        <div class="col-md-6">
          <%= f.label :password, "New password", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>
        <div class="col-md-6">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="mt-3 d-flex gap-2">
        <%= f.submit "Save", class: "btn btn-primary" %>
        <%= link_to "Cancel", public_profile_path(@user), class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h2 class="h6">GitHub</h2>
        <p class="text-muted small">Set your username, then sync projects.</p>
        <%= button_to "Sync GitHub", sync_github_path, method: :post, class: "btn btn-primary w-100" %>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h6">Custom Domains</h2>
        <% if @domains.any? %>
          <ul class="list-group list-group-flush mb-3">
            <% @domains.each do |d| %>
              <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                  <span>
                    <%= d.host %>
                    <% if d.verified? %>
                      <span class="badge bg-success">Verified</span>
                    <% else %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% end %>
                  </span>
                  <div class="d-flex gap-1">
                    <% if d.respond_to?(:verification_token) && !d.verified? %>
                      <%= link_to "Verify", verify_domain_path(d, token: d.verification_token), class: "btn btn-sm btn-outline-primary" %>
                    <% end %>
                    <%= button_to "Remove", domain_path(d), method: :delete, class: "btn btn-sm btn-outline-danger" %>
                  </div>
                </div>
                <% if d.respond_to?(:verification_token) && !d.verified? %>
                  <div class="small text-muted mt-1">Add a TXT record with this token: <code><%= d.verification_token %></code></div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted small mb-3">No domains connected.</p>
        <% end %>
        <%= form_with url: domains_path, method: :post do %>
          <div class="mb-2">
            <label class="form-label">Host</label>
            <%= text_field_tag :host, nil, placeholder: "example.yourapp.com", class: "form-control" %>
          </div>
          <div class="d-flex gap-2">
            <%= submit_tag "Add Domain", class: "btn btn-primary" %>
            <%= link_to "How to connect", connect_domain_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
