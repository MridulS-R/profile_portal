<div class="max-w-2xl mx-auto mt-10 text-center">
  <h1 class="text-3xl font-bold">Welcome to Profile Portal</h1>
  <% if user_signed_in? %>
    <p class="text-gray-400 mt-2">Logged in as <strong><%= current_user.email %></strong></p>
    <div class="mt-4 flex items-center justify-center gap-3">
      <%= link_to "My Profile", public_profile_path(current_user), class: "px-3 py-2 bg-blue-600 rounded" %>
      <%= link_to "Edit Profile", edit_profile_path, class: "px-3 py-2 bg-gray-800 border border-gray-700 rounded" %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "px-3 py-2 bg-gray-800 border border-gray-700 rounded" %>
    </div>
  <% else %>
    <p class="text-gray-400 mt-2">Sign in or create an account to continue.</p>
    <div class="mt-4 flex items-center justify-center gap-3">
      <%= link_to "Log in", new_user_session_path, class: "px-3 py-2 bg-blue-600 rounded" %>
      <%= link_to "Sign up", new_user_registration_path, class: "px-3 py-2 bg-gray-800 border border-gray-700 rounded" %>
      <%= link_to "Sign in with GitHub", user_github_omniauth_authorize_path, class: "px-3 py-2 bg-gray-800 border border-gray-700 rounded" %>
    </div>
  <% end %>
</div>
