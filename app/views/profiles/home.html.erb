<div class="col-lg-8 mx-auto mt-5 text-center">
  <h1 class="display-5 fw-semibold">Welcome to Profile Portal</h1>
  <% if user_signed_in? %>
    <p class="text-muted mt-2">Logged in as <strong><%= current_user.email %></strong></p>
    <div class="mt-3 d-flex justify-content-center gap-2">
      <%= link_to "My Profile", public_profile_path(current_user), class: "btn btn-primary" %>
      <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-outline-secondary" %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
    </div>
  <% else %>
    <p class="text-muted mt-2">Sign in or create an account to continue.</p>
    <div class="mt-3 d-flex justify-content-center gap-2">
      <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Sign in with GitHub", user_github_omniauth_authorize_path, class: "btn btn-outline-dark" %>
    </div>
  <% end %>
</div>
