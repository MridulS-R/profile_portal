<div class="post-index">
  <div class="header-row">
    <h1 class="h3 mb-0">Blog</h1>
    <% if user_signed_in? %>
      <%= link_to "New Post", new_post_path, class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>

  <% if @posts.any? %>
    <div class="post-grid">
      <% @posts.each do |post| %>
        <div class="col">
          <a href="<%= post_path(post) %>" class="text-decoration-none">
            <div class="post-card">
              <div class="body">
                <div class="title"><%= post.title %></div>
                <div class="excerpt"><%= truncate(strip_tags(post.body.to_s), length: 180) %></div>
                <div class="meta">
                  <%= time_ago_in_words(post.published_at || post.created_at) %> ago · <%= post.user.name %>
                  <% if table_exists?('categories') && post.category %>
                    · <%= post.category.name %>
                  <% end %>
                </div>
                <% if table_exists?('tags') && table_exists?('post_tags') && post.tags.any? %>
                  <div class="tag-pills">
                    <% post.tags.each do |t| %>
                      <span class="tag-pill"><%= t.name %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-muted">No posts yet.</div>
  <% end %>
</div>
