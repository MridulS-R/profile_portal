<div class="row g-3">
  <% if @user %>
    <%= render 'profiles/sidebar', user: @user %>
    <div class="col-md-8"></div>
  <% end %>
  <div class="col-12 d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-0">Blog</h1>
    <% if user_signed_in? %>
      <%= link_to "New Post", new_post_path, class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>

  <% if @posts.any? %>
    <div class="col-12">
      <div class="list-group">
        <% @posts.each do |post| %>
          <a href="<%= post_path(post) %>" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= post.title %></h5>
              <small class="text-muted"><%= time_ago_in_words(post.published_at || post.created_at) %> ago</small>
            </div>
            <p class="mb-1 text-muted">
              by <%= post.user.name %>
              <% if post.category %>
                Â· <%= link_to post.category.name, posts_path(category: post.category.slug) %>
              <% end %>
            </p>
            <% if post.tags.any? %>
              <div class="small">
                <% post.tags.each do |t| %>
                  <%= link_to t.name, posts_path(tag: t.slug), class: 'badge text-bg-light me-1' %>
                <% end %>
              </div>
            <% end %>
          </a>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="col-12 text-muted">No posts yet.</div>
  <% end %>
</div>
