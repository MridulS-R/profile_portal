
<h1 class="h3 mb-3">Log in</h1>
<%= form_with scope: :user, url: session_path(:user), method: :post, local: true, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="d-flex gap-2">
    <%= f.submit "Log in", class: "btn btn-primary" %>
    <% if defined?(user_github_omniauth_authorize_path) && provider_enabled?(:github) %>
      <%= button_to "Sign in with GitHub", user_github_omniauth_authorize_path, method: :post, class: "btn btn-outline-dark", data: { turbo: false } %>
    <% end %>
  </div>
<% end %>
<p class="mt-3"><%= link_to "Sign up", new_user_registration_path %></p>
