
<h1 class="text-2xl font-bold mb-4">Log in</h1>
<%= form_with scope: :user, url: session_path(:user), method: :post, class: "space-y-4" do |f| %>
  <div><%= f.label :email %><%= f.email_field :email, class: "w-full p-2" %></div>
  <div><%= f.label :password %><%= f.password_field :password, class: "w-full p-2" %></div>
  <div><%= f.submit "Log in", class: "px-3 py-2 bg-blue-600 rounded" %></div>
<% end %>
<p class="mt-3"><%= link_to "Sign up", new_user_registration_path %></p>
<p class="mt-1"><%= link_to "Sign in with GitHub", user_github_omniauth_authorize_path %></p>
