<h1 class="h3 mb-3">Forgot your password?</h1>

<%= form_with scope: :user, url: password_path(:user), method: :post, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
  <div class="d-flex gap-2">
    <%= f.submit "Send me reset instructions", class: "btn btn-primary" %>
    <%= link_to "Back to login", new_user_session_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>

