<div class="row g-3">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-0 section-title">Latest News</h1>
  </div>

  <div class="col-12">
    <ul class="nav nav-pills mb-3">
      <% @categories.each do |cat| %>
        <% active = (cat == @category) %>
        <li class="nav-item me-2">
          <%= link_to cat.titleize, root_path(category: cat), class: "nav-link#{active ? ' active' : ''}" %>
        </li>
      <% end %>
    </ul>
    <div class="d-flex justify-content-end gap-2 mb-2">
      <button id="view-cards" class="btn btn-sm btn-outline-secondary">Cards</button>
      <button id="view-compact" class="btn btn-sm btn-outline-secondary">Compact</button>
    </div>
  </div>

  <div id="news-hero" class="col-12 mb-3">
    <div class="news-hero">
      <div class="overlay"></div>
      <div class="content">
        <div class="title">Loading top headlineâ€¦</div>
        <div class="meta"></div>
        <div class="actions"></div>
      </div>
    </div>
  </div>

  <div id="news-top" class="col-12 mb-3">
    <div class="row g-3">
      <% 3.times do %>
        <div class="col-md-4">
          <div class="card card-news h-100">
            <div class="card-body">
              <div class="skeleton" style="height:18px;width:80%;border-radius:6px;margin-top:.5rem;"></div>
              <div class="skeleton" style="height:12px;width:50%;border-radius:6px;margin-top:.5rem;"></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="news-list" class="row g-3" data-category="<%= @category %>">
    <% 6.times do %>
      <div class="col-md-6">
        <div class="card card-news h-100">
          <div class="card-body">
            <div class="skeleton" style="height:18px;width:85%;border-radius:6px;margin-top:.5rem;"></div>
            <div class="skeleton" style="height:12px;width:60%;border-radius:6px;margin-top:.5rem;"></div>
            <div class="skeleton" style="height:12px;width:40%;border-radius:6px;margin-top:.5rem;"></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="news-pagination" class="col-12 mt-3">
    <div class="pagination-controls">
      <button class="btn btn-sm btn-outline-secondary" id="prev-page">Prev</button>
      <span id="page-info" class="text-muted small">Page 1</span>
      <button class="btn btn-sm btn-outline-secondary" id="next-page">Next</button>
    </div>
  </div>
  <noscript>
    <div class="col-12 text-muted">Enable JavaScript to view the latest news.</div>
  </noscript>
</div>
