<div class="row g-3">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-0 section-title">Latest News</h1>
  </div>

  <div class="col-12">
    <ul class="nav nav-pills mb-3">
      <% @categories.each do |cat| %>
        <% active = (cat == @category) %>
        <li class="nav-item me-2">
          <%= link_to cat.titleize, root_path(category: cat), class: "nav-link#{active ? ' active' : ''}" %>
        </li>
      <% end %>
    </ul>
  </div>

  <div id="news-top" class="col-12 mb-3">
    <div class="text-muted">Loading top stories…</div>
  </div>

  <div id="news-list" class="row g-3" data-category="<%= @category %>">
    <div class="col-12 text-muted">Loading news…</div>
  </div>
  <noscript>
    <div class="col-12 text-muted">Enable JavaScript to view the latest news.</div>
  </noscript>
</div>
