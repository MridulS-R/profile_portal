
<!DOCTYPE html>
<html>
  <head>
    <title><%= t("layouts.application.title") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%= javascript_importmap_tags %>
  </head>
  <body class="d-flex flex-column min-vh-100 <%= @theme == 'dark' ? 'bg-dark text-light' : 'bg-light' %>">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "Profile Portal", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><%= link_to "Demos", demos_path, class: "nav-link" %></li>
            <% if Rails.env.development? %>
              <li class="nav-item"><%= link_to "Sidekiq", "/sidekiq", class: "nav-link" %></li>
            <% end %>
          </ul>
          <div class="d-flex gap-2">
            <% if user_signed_in? %>
              <%= link_to "My Profile", public_profile_path(current_user), class: "btn btn-outline-light btn-sm" %>
              <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-outline-light btn-sm" %>
              <%= button_to "Sync GitHub", sync_github_path, method: :post, class: "btn btn-primary btn-sm" %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-secondary btn-sm" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "btn btn-outline-light btn-sm" %>
              <% if defined?(user_github_omniauth_authorize_path) %>
                <%= button_to "Sign in with GitHub", user_github_omniauth_authorize_path, method: :post, class: "btn btn-secondary btn-sm", data: { turbo: false } %>
              <% end %>
              <% if defined?(user_google_oauth2_omniauth_authorize_path) %>
                <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-secondary btn-sm", data: { turbo: false } %>
              <% end %>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <main class="container py-4 flex-grow-1">
      <% flash.each do |key, message| %>
        <% cls = case key.to_s; when 'notice' then 'alert-success'; when 'alert' then 'alert-danger'; else 'alert-info'; end %>
        <div class="alert <%= cls %>" role="alert"><%= message %></div>
      <% end %>
      <%= yield %>
    </main>
    <footer class="text-center text-muted py-4 border-top bg-white">&copy; <%= Time.current.year %> Profile Portal</footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
  </html>
